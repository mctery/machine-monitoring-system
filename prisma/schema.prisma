// Prisma schema for PLC Log - Machine Hours

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model MachineHours {
  id           Int       @id @default(autoincrement())
  logTime      DateTime  @map("log_time")
  machineName  String    @map("machine_name") @db.VarChar(50)
  runHour      Float     @map("run_hour")
  stopHour     Float     @map("stop_hour")
  runStatus    Int       @map("run_status") @db.TinyInt
  stopStatus   Int       @map("stop_status") @db.TinyInt
  reworkStatus Int?      @map("rework_status")

  @@map("machine_hours")
}

model MachineSettings {
  id            Int      @id @default(autoincrement())
  machineName   String   @unique @map("machine_name") @db.VarChar(50)
  groupName     String   @map("group_name") @db.VarChar(50)
  weeklyTarget  Float    @default(80) @map("weekly_target")
  monthlyTarget Float    @default(80) @map("monthly_target")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("machine_settings")
}
